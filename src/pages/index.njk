{% extends "layouts/empty.njk" %}

{# Page-specific variables #}
{% set page = {
  "title": "Welcome"
} %}

{% block content %}
  <!DOCTYPE html>
  <html lang="{{app.lang}}">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <title>{{page.title}} - {{app.title}}</title>
      <meta name="application-name" content="{{app.title}}"/>

      <!--
      Theme colors for web browsers and favicons
      @see https://codeburst.io/progressive-web-apps-customize-status-bar-23c4b2de590f
      -->
      <meta name="theme-color" content="{{token_colors.app.theme}}">
      <meta name="apple-mobile-web-app-status-bar-style" content="{{token_colors.app.theme}}">
      <meta name="msapplication-navbutton-color" content="{{token_colors.app.theme}}">
      <meta name="msapplication-TileColor" content="{{token_colors.app.theme}}"/>

      {% include "layouts/partials/head_favicon.njk" %}

      <!--
      Disables phone number format recognition in Microsoft Edge
      @see https://docs.microsoft.com/en-us/previous-versions/windows/internet-explorer/ie-developer/dev-guides/dn265018(v=vs.85)
      -->
      <meta name="format-detection" content="telephone=no">

      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
      {% include "layouts/partials/guidelines_css.njk" %}
      {% include "layouts/partials/guidelines_js.njk" %}
    </head>
    <body class="guideline-page">
      <main class="guidelines p-5">
        <div class="d-flex gap-3 align-items-center justify-content-between">
            <h1 style="color:{{token_colors.app.theme}}" class="display-3 mb-4">{{app.name}}</h1>
        </div>
        <hr/>

        <div class="py-4">
          <a class="display-6" href="guidelines/tokens.html">
            Design tokens
          </a>
        </div>

        <!-- Templates -->
        <div class="guideline-block py-4">
            <h2 class="guideline__title display-3 mb-4"><span class="text-muted">/</span> Templates</h2>
            {% for template in ui_index.templates %}
              <div>
                <p class="fs-4">
                  <a href="templates/{{template.slug}}.html">{{template.name}}</a>
                </p>
                <hr/>
              </div>
            {% endfor %}
        </div>

        <!-- Components -->
        <div class="guideline-block py-4">
            <h2 class="guideline__title display-3  mb-4"><span class="text-muted">/</span> Components</h2>
            {% for component in ui_index.components %}
              <div>
                <p class="fs-4">
                  <a href="components/{{component.slug}}.html">{{component.name}} <small class="text-muted" style="font-family:monospace;"> &middot; {{component.slug}}</small></a>
                </p>
                <hr/>
              </div>
            {% endfor %}
        </div>

        <!-- Extras -->
        <div class="guideline-block py-4">
            <h2 class="guideline__title display-3  mb-4"><span class="text-muted">/</span> Extras</h2>
            {% for extra in ui_index.extras %}
              <div>
                <p class="fs-4">
                  <a href="components/{{extra.slug}}.html">{{extra.name}}</a>
                </p>
                <hr/>
              </div>
            {% endfor %}
        </div>

      </div>
      {% include "layouts/partials/foot_css.njk" %}
    </body>
  </html>
{% endblock %}